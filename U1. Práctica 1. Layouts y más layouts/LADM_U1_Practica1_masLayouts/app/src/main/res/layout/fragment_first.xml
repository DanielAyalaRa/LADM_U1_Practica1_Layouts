<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".FirstFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="@color/white"
        android:text="Nayarit Lugares Turisticos"/>

    <ImageView
        android:id="@+id/imagenes"
        android:layout_width="104dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:scaleX="3"
        android:scaleY="2"
        android:src="@drawable/imagen1" />

    <TextView
        android:id="@+id/lugar"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:background="@drawable/titulos"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textSize="24dp"
        android:layout_below="@+id/imagenes"
        android:textColor="@color/black"
        android:text="Playa los muertos"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANTERIOR"
        android:layout_below="@+id/lugar"
        android:background="@drawable/botones_redondos"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:padding="20dp"
        android:id="@+id/anterior"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGUIENTE"
        android:layout_below="@+id/lugar"
        android:layout_alignParentRight="true"
        android:background="@drawable/botones_redondos"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:padding="20dp"
        android:id="@+id/siguiente"/>


</RelativeLayout>